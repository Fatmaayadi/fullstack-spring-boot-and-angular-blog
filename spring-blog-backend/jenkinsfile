pipeline {
    agent any

    environment {
        SONAR_SERVER_URL = 'http://192.168.74.139:9010/'
        NEXUS_SERVER_URL = 'http://192.168.74.134:8081/'
        MAVEN_HOME = tool 'Maven'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Fatmaayadi/fullstack-spring-boot-and-angular-blog.git'
                script {
                    // Change directory to spring-blog-backend
                    dir('spring-blog-backend') {
                        sh 'ls -la' // just to verify the correct directory
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    dir('spring-blog-backend') {
                        sh 'mvn clean package'
                    }
                }
            }
        }

        stage('SonarQube Scan') {
            steps {
                script {
                    dir('spring-blog-backend') {
                        withSonarQubeEnv('SonarQube') {
                            sh 'mvn sonar:sonar'
                        }
                    }
                }
            }
        }

        stage('Publish Artifact to Nexus') {
            steps {
                script {
                    dir('spring-blog-backend') {
                        nexusArtifactUploader nexusUrl: "${NEXUS_SERVER_URL}", artifacts: [[artifactId: 'spring-blog-backend', classifier: '', file: 'target/spring-blog-backend-0.0.1-SNAPSHOT.jar', type: 'jar']]
                    }
                }
            }
        }
    }
}
